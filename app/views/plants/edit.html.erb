<div class="container" style ="margin-top: 84px">
  <h1 class="text-center my-4 text-primary">Modifier l'article</h1>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <%= simple_form_for(@plant) do |f| %>

          <div class="mb-3">
            <%= f.label "Name :", class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label 'Catégorie :', class: 'form-label' %>
            <%= f.text_field :category, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label 'Description :', class: 'form-label' %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label 'Prix :', class: 'form-label' %>
            <%= f.number_field :price, class: 'form-control' %>
          </div>
          <div class="text-center">
            <%= f.button :submit, "Mettre à jour", class: "btn btn-primary p-0" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
