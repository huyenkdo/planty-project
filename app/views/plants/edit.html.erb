<div class="container" style ="margin-top: 63px">
  <h1 class="text-center my-4">Modifier l'article</h1>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card p-4">
        <%= simple_form_for(@plant) do |f| %>

          <div class="mb-3">
            <%= f.label 'Nom :', class: 'form-label' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label 'Catégorie :', class: 'form-label' %>
            <%= f.text_field :category, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label 'Description :', class: 'form-label' %>
            <%= f.text_field :description, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label 'Prix :', class: 'form-label' %>
            <%= f.number_field :price, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          </div>
          <div class="text-center">
            <%= f.button :submit, "Mettre à jour", class: "btn btn-primary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
